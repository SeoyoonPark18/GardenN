<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="플랜테리어 식물로 유명한 몬스테라를 만나보세요"
            android:textColor="#9E9E9E"
            android:textSize="13dp"
            android:textAlignment="center"
            android:layout_marginTop="40dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[상품 정보] 몬스테라"
            android:textColor="#212121"
            android:layout_marginTop="18dp"
            android:textSize="17dp"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:src="@drawable/product1"
            android:layout_margin="35dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="플랜테리어를 처음 도전하는 분들이라면"
            android:textColor="#212121"
            android:textSize="17dp"
            android:layout_margin="3dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="몬스테라가 좋아요."
            android:textColor="#212121"
            android:textSize="17dp"
            android:layout_margin="3dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="키우기 까다롭지 않고 성장이 빨라요"
            android:textColor="#212121"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="나만의 정원에 바람에 날리는"
            android:textColor="#212121"
            android:textSize="17dp"
            android:layout_marginTop="30dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="몬스테라 물결을 한번 연출해보세요!"
            android:textColor="#212121"
            android:textSize="17dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="35dp"
            android:textAlignment="center" />



    </LinearLayout>

</androidx.core.widget.NestedScrollView>