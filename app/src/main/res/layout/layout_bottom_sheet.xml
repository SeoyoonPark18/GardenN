<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheetContainer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@drawable/bottom_sheet_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivFeed"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="15dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            tools:ignore="SpeakableTextPresentCheck"
            android:layout_gravity="center"
            android:src="@drawable/fab_icon1"/>

        <Button
            android:id="@+id/btnFabAddFeed"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:textAlignment="textStart"
            style="?android:attr/borderlessButtonStyle"
            android:text="피드 올리기"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivFeed2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="15dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            tools:ignore="SpeakableTextPresentCheck"
            android:layout_gravity="center"
            android:src="@drawable/fab_icon2"/>

        <Button
            android:id="@+id/btnFabAddFeed2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            style="?android:attr/borderlessButtonStyle"
            android:textAlignment="textStart"
            android:text="리뷰 쓰기"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivFeed3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="15dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            tools:ignore="SpeakableTextPresentCheck"
            android:layout_gravity="center"
            android:src="@drawable/fab_icon3"/>

        <Button
            android:id="@+id/btnFabAddFeed3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:textAlignment="textStart"
            style="?android:attr/borderlessButtonStyle"
            android:text="식물 질문"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>